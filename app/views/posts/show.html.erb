<p id="notice"><%= notice %></p>

<% if @post.image.attached? %>
  <p>
    <%= image_tag @post.image, width: '50%' %>
  </p>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
